<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="molinov.creditcalculator.view.main.MainFragment"
        android:label="@string/main_fragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_main_fragment_to_schedule_fragment"
            app:destination="@id/schedule_fragment" />
    </fragment>

    <fragment
        android:id="@+id/schedule_fragment"
        android:name="molinov.creditcalculator.view.schedule.ScheduleFragment"
        android:label="@string/schedule_fragment"
        tools:layout="@layout/schedule_fragment">
        <argument
            android:name="data"
            app:argType="molinov.creditcalculator.model.DataFields"
            app:nullable="true"
            android:defaultValue="@null"/>
        <action
            android:id="@+id/action_schedule_fragment_to_main_fragment"
            app:destination="@id/main_fragment" />
        <action
            android:id="@+id/action_schedule_fragment_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="molinov.creditcalculator.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications">
        <action
            android:id="@+id/action_navigation_notifications_to_schedule_fragment"
            app:destination="@id/schedule_fragment" />
    </fragment>
</navigation>
